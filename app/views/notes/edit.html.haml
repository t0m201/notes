= render 'layouts/header', show_btn: :yes
#main_content
  = form_for @note do |f|
    .note
      .note_inner
        .note_top
          .field
            = f.label :title
            = f.text_field :title
        .note_content
          .field
            = f.label :body
            = f.text_area :body
        .note_bottom
          .field
            .button= f.submit
